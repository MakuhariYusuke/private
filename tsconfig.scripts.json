{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/scripts",
    "rootDir": "./src/scripts",
  "noEmit": false,
  "allowImportingTsExtensions": false,
    "declaration": false,
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "es2020"]
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
