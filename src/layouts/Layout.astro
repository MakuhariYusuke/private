---
import "../styles/global.css";
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="api-key" content="" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
			<link rel="icon" type="image/svg+xml" href="/private/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>千葉工業設備株式会社 - モックサイト</title>
	</head>
	<body>
		<a class="skip-link" href="#main">メインコンテンツへ移動</a>
	<header class="site-header" role="banner">
			<div class="inner">
				<div style="display:flex;align-items:center;gap:18px">
					<a class="brand" href="/">千葉工業設備株式会社</a>
					<nav class="nav" id="mainNav" aria-label="主要ナビゲーション">
						<a href="/private/about">会社概要</a>
						<a href="/private/careers">採用情報</a>
						<a href="/private/location">所在地</a>
						<a href="/private/contact">お問合わせ</a>
					</nav>
				</div>
			</div>
		</header>

		<script>
			// simple active link highlighting
			(function(){
				if (typeof window === 'undefined') return;
				const nav = document.getElementById('mainNav');
				if(!nav) return;
				const path = location.pathname.replace(/\/$/, '') || '/about';
				Array.from(nav.getElementsByTagName('a')).forEach(a => {
					if (a.getAttribute('href') === path) {
						a.classList.add('active');
						a.setAttribute('aria-current','page');
						// also make non-focusable for screen readers if desired
						// leave focusability but remove pointer events via CSS
					}
				});
			})();
		</script>

	<main id="main" class="site-main" role="main">
			<slot />
		</main>

	<footer class="site-footer" role="contentinfo">
			<div class="inner">
				<small>© {new Date().getFullYear()} 千葉工業設備株式会社 — モックサイト</small>
			</div>
		</footer>
	</body>
</html>
